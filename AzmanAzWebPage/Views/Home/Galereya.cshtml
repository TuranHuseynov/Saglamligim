@model AzmanAzWebPage.Viewmodel.MyModel
@{
    ViewBag.Title = "Galereya";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="works" class="works section no-padding" style="padding:34px;">
    <div class="container-fluid">
        <div class="row no-gutter">
        @foreach (var item in Model._galereya)
        {
            <div class="col-lg-3 col-md-6 col-sm-6 work">
                <a href="~/Yuklenen/@item.galery_image" class="work-box">
                    <img src="~/Yuklenen/@item.galery_image" alt="">
                    <div class="overlay">
                        <div class="overlay-caption">
                            <h5>@item.galery_header</h5>
                            <p>@item.galery_text</p>
                        </div>
                    </div>
                    <!-- overlay -->
                </a>
            </div>

        }

        </div>
    </div>
</section>
<div class="clearfix"></div>