@model AzmanAzWebPage.Viewmodel.MyModel
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    button:focus {
        outline: none;
    }
</style>


<section id="blog">
    <div class="container">
      @foreach (var item in Model._mallar)
      {
       <div class="row">
            <div class="col-md-6">
                <div class="itemblog">
                    <img src="~/Yuklenen/@item.mal_resmi" style="width: 100%;transition: .4s linear;">
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="text-center">@item.mal_adi</h2>
                <h3>Qiymət : @item.mal_qiymeti</h3>
                <p style="font-size: 19px;letter-spacing: 1px;line-height: 33px;">@item.mal_info</p><br>
                <button onclick='return doAlert()' style="margin: 20px;font-size: 19px;padding: 6px 27px;border: 1px solid #ccc;border-radius: 42px;background: #175f75;color: white;float:right;" id="firstSif">Sifariş et</button>
            </div>
        </div>
        <div class="row">
            <div id="gizliform" style="display: none;">
                <div class="container">
                    <div class="col-md-12 col-xs-12">
                        <form action="/Home/BlogForm" method="post" name="frm">
                            <div class="md-form mb-5">
                                <i class="fa fa-user prefix grey-text"></i>
                                <label data-error="wrong" data-success="right" for="form3">Ad,Soyad</label>
                                <input type="text" id="form3" class="form-control validate" name="zakazim_adi_soyad" style="margin-bottom: 20px;">
                            </div>
                            <div class="md-form mb-4">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <label data-error="wrong" data-success="right" for="form2">Telefon</label>
                                <input type="tel" name="zakazim_telefon" id="form2" class="form-control validate">
                            </div>
                            <input type="text" name="zakazim_mehsul" style="display:none" value="@item.mal_adi" />
                            <div class="text-center">
                                <button type="submit" style="margin: 20px;font-size: 19px;padding: 6px 27px;border: 1px solid #ccc;border-radius: 42px;background: #175f75;color: white;" onclick="return IsEmpty()">SİFARİŞ</button>
                            </div>
                         
                        </form>
                    </div>
                </div>
            </div>
        </div>

      }
    </div>
</section>


<style>
    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: 700;
        font-size: 20px;
    }
</style>






<div class="text-center">

</div>
<script type="text/javascript">
    function doAlert() {
        $('#gizliform').css('display', 'block');
        $('#firstSif').css('display', 'none');
    }
</script>
<script type="text/javascript">

    function IsEmpty() {
        if (document.forms['frm'].zakazim_adi_soyad.value === "" || document.forms['frm'].zakazim_telefon.value === "") {
            alert("Hər iki bölməni doldurun");
            return false;
        } else {
            alert("Sorğunuz qeydə alındı");
            return true;
        }




    };
</script>