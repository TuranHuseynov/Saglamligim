@model AzmanAzWebPage.Viewmodel.MyModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="carousel">
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>


            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/YeniWeb/images/anagaincover.jpg" alt="Los Angeles" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/YeniWeb/images/doublecover.jpg" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/YeniWeb/images/nurccover.jpg" alt="New york" style="width:100%;">
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>
<div class="clearfix"></div>

<section id="mehsul">
    <div class="container">
        <h1 class="text-center" style="font-family: myFirstFont;">Məhsullar</h1>
        <div class="row">
       @foreach (var item in Model._mallar)
       {
            <div class="col-md-3">
                <a href="/Home/Blog/@item.mal_id">
                    <div class="itemsmehsul">
                        <img src="~/Yuklenen/@item.mal_resmi" style="width: 100%;">
                        <p>@item.mal_qiymeti</p>
                        <h4>@item.mal_bawliq</h4>
                    </div>
                </a>
            </div>

       }
        </div>
    </div>
</section>

<div class="clearfix"></div>


<section id="payServices">
    <div class="container">
        <p class="text-center basliq">Endirimlər</p>
        <div class="row">
        @foreach (var item in Model._endirim)
        {
               <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="card1">
                    <div class="title text-center">
                        <i class="fa fa-paper-plane" style="color: whitesmoke;"></i>
                    </div>
                    <h2>@item.endirim_novu</h2>
                    <div class="price text-center">
                        <h4>@item.edirim_faiz</h4>
                    </div>
                    <div class="option text-center">
                        <ul>
                            <li><i class="fa fa-check"></i>Online Sifariş</li>
                            <li><i class="fa fa-check"></i>Məkana Çatdırma</li>
                            <li><i class="fa fa-check"></i>Məxfilik</li>

                        </ul>
                    </div>
                    <a href="/Home/EndirimBlog/@item.endirim_id">Ətraflı</a>
                </div>
            </div>

        }

        </div>
    </div>
</section>

<div class="clearfix"></div>
<section id="xidmetler">
    <div class="container">
        <h1 class="text-center">Xidmətlərimiz</h1>
        <div class="row">
        @foreach (var item in Model._servis)
        {
            <div class="col-md-4">
                <div class="itemxidmet text-center">
                    @*<img src="~/YeniWeb/images/formu.png" style="width: 46%;">*@
                     	<i class="@item.servis_icon" aria-hidden="true"></i> 
                    <h2>@item.servis_adi</h2>
                    <p>@item.servis_content</p>
                </div>
            </div>

        }
        </div>
    </div>
</section>
<div class="clearfix"></div>


<section id="threed">

    <div class="slideshow">
        <h1 class="text-center mhs">Məhsullar</h1>
        <div class="content">
            <div class="content-carrousel">

            @foreach (var item in Model._karusel)
            {
                <figure class="shadow">
                    <a href="index.html"><img src="~/Yuklenen/@item.karusel_image" class="karsel"></a>
                </figure>
          
            }

            </div>
        </div>
    </div>
</section>
<div class="clearfix"></div>

<div class="loader"></div>
<style>

    .karsel:hover {
        transform: scale(1.5,1.5);

    }

</style>