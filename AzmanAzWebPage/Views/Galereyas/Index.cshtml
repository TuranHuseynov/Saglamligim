@model IEnumerable<AzmanAzWebPage.Models.Galereya>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Az/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.galery_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.galery_header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.galery_text)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Yuklenen/@item.galery_image" style="width:80%;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.galery_header)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.galery_text)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.galery_id }) |
            @Html.ActionLink("Details", "Details", new { id = item.galery_id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.galery_id })
        </td>
    </tr>
}

</table>
