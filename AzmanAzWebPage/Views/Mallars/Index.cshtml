@model IEnumerable<AzmanAzWebPage.Models.Mallar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Az/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.mal_resmi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mal_adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mal_qiymeti)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mal_youtube_link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mal_web_link)
        </th>
   
        <th>
            @Html.DisplayNameFor(model => model.mal_bawliq)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Kategoriya.kategorya_adi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Yuklenen/@item.mal_resmi"  style="width:96%;"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mal_adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mal_qiymeti)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mal_youtube_link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mal_web_link)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.mal_bawliq)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Kategoriya.kategorya_adi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.mal_id }) |
            @Html.ActionLink("Details", "Details", new { id = item.mal_id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.mal_id })
        </td>
    </tr>
}

</table>
